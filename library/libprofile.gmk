# -*- mode: makefile; -*-

##############################################################################

LIBS += lib/libprofile.so \
		lib/libprofile.a

##############################################################################

PROFILE_LIB = \
	profile__mcount.o \
	profile_gmon.o \
	profile_mcount.o

##############################################################################

# Dependencies to rebuild if the library version changes

obj/libprofile/profile.lib_rev.o : profile.lib_rev.c profile.lib_rev.h

obj/libprofile/%.o : AFLAGS += $(PIC) $(LARGEDATA)
obj/libprofile/%.o : %.S
	$(VERBOSE)$(ASSEMBLE)

obj/libprofile/%.o : CFLAGS += $(PIC) $(LARGEDATA)
obj/libprofile/%.o : %.c
	$(VERBOSE)$(COMPILE)

lib/libprofile.a : $(addprefix obj/libprofile/,$(PROFILE_LIB))
	$(VERBOSE)$(MAKELIB)

lib/libprofile.so : $(addprefix obj/libprofile/,$(PROFILE_LIB))
	$(VERBOSE)$(MAKESHARED)
