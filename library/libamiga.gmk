# Dependencies to rebuild if the library version changes

obj/libamiga/amiga.lib_rev.o : amiga/amiga.lib_rev.c amiga/amiga.lib_rev.h
obj.shared/libamiga/amiga.lib_rev.o : amiga/amiga.lib_rev.c amiga/amiga.lib_rev.h

obj/libamiga/%.o : CFLAGS += $(LARGEDATA)

obj.shared/libamiga/%.o : CFLAGS += $(PIC) $(LARGEDATA)

obj/libamiga/%.o : %.c
	$(VERBOSE)$(COMPILE)

obj.shared/libamiga/%.o : %.c
	$(VERBOSE)$(COMPILE_SHARED)

lib/libamiga.a : $(addprefix obj/libamiga/,$(AMIGA_LIB))
	$(VERBOSE)$(MAKELIB)

lib/libamiga.so : $(addprefix obj.shared/libamiga/,$(AMIGA_LIB))
	$(VERBOSE)$(MAKESHARED)