$(OUT_SHARED_LIB)/shared_library/clib2.o : CFLAGS = $(INCLUDES) $(OPTIONS) $(OPTIMIZE) -O0 -fno-aggressive-loop-optimizations
$(OUT_SHARED_LIB)/shared_library/clib2.o : $(LIB_DIR)/shared_library/clib2.c $(LIB_DIR)/shared_library/clib2.h
	$(VERBOSE)$(COMPILE)

$(OUT_SHARED_LIB)/shared_library/%.o : $(LIB_DIR)/shared_library/%.c
	$(VERBOSE)$(COMPILE)

$(OUT_SHARED_LIB)/%.o : $(LIB_DIR)/%.c
	$(VERBOSE)$(COMPILE)

$(OUT_SHARED_LIB)/math/%.o : $(LIB_DIR)/math/%.c
	$(VERBOSE)$(COMPILE)

$(OUT_SHARED_LIB)/profile/%.o : $(LIB_DIR)/profile/%.c
	$(VERBOSE)$(COMPILE)

$(OUT_SHARED_LIB)/profile/%.o : $(LIB_DIR)/profile/%.S
	$(VERBOSE)$(ASSEMBLE)

$(OUT_SHARED_LIB)/amiga/%.o : $(LIB_DIR)/amiga/%.c
	$(VERBOSE)$(COMPILE)

$(OUT_SHARED_LIB)/crypt/%.o : $(LIB_DIR)/crypt/%.c
	$(VERBOSE)$(COMPILE)

$(OUT_SHARED_LIB)/%.o : $(LIB_DIR)/%.sx
	$(VERBOSE)$(COMPILE_ALTIVEC_REG)

$(OUT_SHARED_LIB)/cpu/generic/%.o : $(LIB_DIR)/cpu/generic/%.S
	$(VERBOSE)$(COMPILE_REG)

$(OUT_SHARED_LIB)/cpu/spe/%.o : $(LIB_DIR)/cpu/spe/%.S
	$(VERBOSE)$(COMPILE_SPE_REG)

$(OUT_SHARED_LIB)/%.o : $(LIB_DIR)/%.S
	$(VERBOSE)$(COMPILE_ASM)

$(OUT_SHARED_LIB)/setjmp/setjmp.o : CFLAGS = $(INCLUDES) $(OPTIONS) $(OPTIMIZE) -maltivec -mabi=altivec
$(OUT_SHARED_LIB)/setjmp/setjmp.o : $(LIB_DIR)/setjmp/setjmp.S
	$(VERBOSE)$(COMPILE_ALTIVEC_REG)

$(OUT_SHARED_LIB)/setjmp/longjmp.o : CFLAGS = $(INCLUDES) $(OPTIONS) $(OPTIMIZE) -maltivec -mabi=altivec
$(OUT_SHARED_LIB)/setjmp/longjmp.o : $(LIB_DIR)/setjmp/longjmp.S
	$(VERBOSE)$(COMPILE_ALTIVEC_REG)